<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="412dp"
        android:layout_height="166dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/userProfileView"
                android:layout_width="100dp"
                android:layout_height="78dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/usernameView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/userProfileView"
                android:hint="Email"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/degreeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameView"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/userProfileView"
                android:hint="Degree"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/addFriendView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/degreeView"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/userProfileView"
                app:srcCompat="@drawable/addperson" />

            <ImageView
                android:id="@+id/chatView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/degreeView"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/addFriendView"
                app:srcCompat="@drawable/ic_baseline_chat_24" />

            <ImageView
                android:id="@+id/profileView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/degreeView"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/chatView"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>